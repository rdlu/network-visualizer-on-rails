<div class="row-fluid">
  <div class="span12" style="text-align: center;">
    <h1>Esqueci minha senha!</h1>
  </div>
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>
      <div class="span4 offset4" style="text-align: center;">
        <div class="field">
          <%= f.email_field :email, :placeholder => "E-Mail", :class => 'input-block-level' %>
        </div>
        <%= f.submit "Quero uma nova senha!", :class => 'btn btn-primary btn-large btn-block' %>
        <h4>As instruções serão enviadas para seu e-mail</h4>
        <%= render "devise/shared/links" %>
      </div>
  <% end %>
</div>