<h1> Controle de Usuários</h1>
<div class="row-fluid">
  <div class="span12">
    <% if can? :create, User%>
    <div class="navbar">
      <div class="navbar-inner">
        <div class="span2 offset10">
          <%= link_to "Novo Usuário", new_user_path, :class => "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
    <%end%>
  </div>
</div>
<div class="row-fluid">
  <div class="span12" >
   <table class="table table-bordered table-hover">
      <thead>
      <tr>
        <th>Email</th>
        <th>Logins</th>
        <th>Nível de Acesso</th>
        <th>Último login</th>
        <th>Status</th>
        <% if can? :create, User %>
            <th>Ações</th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
          <tr>

            <td><%= user[:email] %></td>
            <td><%= user[:sign_in_count] %></td>
            <td><%= if user.roles.collect(&:name) == ["admin"]
                      "Administrador"
                    elsif  user.roles.collect(&:name) == ["normal"]
                      "Configurador"
                    elsif user.roles.collect(&:name) == ["visualizador"]
                      "Visualizador"
                    else
                      "Administrador/Configurador"
                    end
            %></td>
            <td><%= if user[:last_sign_in_at] == nil
                      "Never done this before"
                    else
                      user[:last_sign_in_at]
                    end %></td>
            <td><%=
                if user[:confirmed_at] != nil
                  "Ativo"
                else
                  "Inativo"
                end
            %></td>
          <% if can? :create, User%>
          <td><%= if can? :edit, User
                      link_to "Editar", edit_user_path(user)
                    end %></td>
            <td><%= if can? :destroy, User
                      link_to "Excluir", user_path(user), :data => {:confirm => "Você tem certeza que deseja cancelar sua conta?"}, :method => :delete
                    end %></td>
            <td><%= if can? :active, User
                      if user[:confirmed_at].nil?
                        link_to "Ativar", user_active_path(user)
                      else
                        link_to "Desativar", user_active_path(user)
                      end
                    end %></td>
          <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= will_paginate @users %>
  </div>
</div>
