
<%= form_tag([:process,@process], :class => 'form-horizontal', :id => 'process-form') do |f| %>
      <div class="span6">
         <div class="control-group">
          <label class="control-label"  for="destination_probe">Agente: </label>
          <div class="controls">
            <%= collection_select :destination_probe, :id, Probe.order(:name).all, :id, :pretty_name_with_location, {:include_blank => "Selecione uma sonda de destino..."}, {:class => 'input-block-level'} %>
          </div>
         </div>
        <div class="control-group">
          <div class="span3">
            <label class="control-label"  for="speed">Velocidade Contratada: </label>
            <div class="controls">
              <select id="speed">
                <option value="s">4 Mbps</option>
              </select>
            </div>
            <div class="span3">
              <label class="control-label"  for="pop">POP: </label>
              <div class="controls">
                <select id="pop">
                  <option value="p">Todos</option>
                </select>
              </div>
            </div>
          </div>
        </div>
      </div>

        <div class="span3">
          <div class="control-group">
              <label class="control-label"  for="destination_type">Tipo de Destino: </label>
              <div class="controls">
                <select id="destination_type">
                  <option value="w">Windows</option>
                </select>
              </div>
          </div>
          <div class="control-group">
              <label class="control-label"  for="modem">Modem: </label>
              <div class="controls">
                <select id="modem">
                  <option value="m">Todos</option>
                </select>
              </div>
          </div>
        </div>

        <div class="span3">
          <label class="control-label"  for="connection_type">Tipo de Conexão: </label>
          <div class="controls">
            <select id="connection_type">
              <option value="f">Fixa</option>
            </select>
          </div>
        </div>
    </div>

    <br/><br/>
    <div class="control-group" style="margin-left: 70px">
        <div class="span4">
          Testes Disponíveis:
          <div class="tabbable">
            <ul class="nav nav-tabs ">
              <li class="active"><a href="#todas" data-toggle="tab">Todos</a></li>
              <li><a href="#ativas" data-toggle="tab">Ativas</a></li>
              <li><a href="#http" data-toggle="tab">HTTP</a></li>
              <li><a href="#dns" data-toggle="tab">DNS</a></li>
              <li><a href="#web" data-toggle="tab">Web</a></li>
            </ul>
            <div class="tab-content tab-content-border" style="min-height: 50px !important">
              <div class="tab-pane active" id="todas">
                <select multiple="true" id="test_available"  style="width: 100%">
                  <option value="1">Teste</option>
                </select>
              </div>
              <div class="tab-pane" id="ativas">
                <select multiple="true" id="test_available"  style="width: 100%">
                  <option value="2">Teste ativo</option>
                </select>
              </div>
              <div class="tab-pane" id="http">
                <select multiple="true" id="test_available"  style="width: 100%">
                  <option value="3">Teste http</option>
                </select>
              </div>
              <div class="tab-pane" id="dns">
                <select multiple="true" id="test_available"  style="width: 100%">
                  <option value="4">Teste dns</option>
                </select>
              </div>
              <div class="tab-pane" id="web">
                <select multiple="true" id="test_available"  style="width: 100%">
                  <option value="5">Teste web</option>
                </select>
              </div>
            </div>
          </div>
        </div>
        <div class="span2" style="margin-top: 50px; margin-right: -30px">
          <input class="btn" type="button" value="Adicionar >>" id="add"/><br/>
          <input class="btn" type="button" value=" << Remover" id="remove"/>
        </div>
        <div class="span4">
          Testes Configurados:
            <div>
              <select style="margin-top:38px;height: 100px" multiple="true" id="test_config">
              </select>
            </div>
        </div>
    </div>
    <div class="row-fluid">
      <div class="span8" style="margin-top: 50px;margin-left: 100px">
        <div class="span4 control-group">
          <div class="controls">
            <!--%= f.submit "Salvar", :class => "btn btn-primary btn-large btn-block" %-->
            <div><%= link_to "Salvar", :back , :class => 'btn btn-primary btn-large btn-block' %></div>
          </div>
        </div>
        <div class="span2 ">
          <div><%= link_to "Voltar", :back , :class => 'btn btn-inverse btn-large btn-block' %></div>
        </div>
      </div>
    </div>
    </div>
 <% end %>


<script>
   function moveItem(id){}

    $(function(){
        $("#add").click(function(){
            $("#test_available > option:selected").each(function(){
                $(this).remove().appendTo("#test_config");
            });
        });

        $("#remove").click(function(){
            $("#test_config > option:selected").each(function(){
                $(this).remove().appendTo("#test_available");
            });
        });
    });
</script>