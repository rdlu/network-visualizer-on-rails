<%- model_class = Nameserver -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:primary) %></th>
      <th><%= model_class.human_attribute_name(:vip) %></th>
      <th><%= model_class.human_attribute_name(:internal) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @nameservers.each do |nameserver| %>
      <tr>
        <td><%= link_to nameserver.id, nameserver_path(nameserver) %></td>
        <td><%= nameserver.address %></td>
        <td><%= nameserver.name %></td>
        <td><%= nameserver.primary %></td>
        <td><%= nameserver.vip %></td>
        <td><%= nameserver.internal %></td>
        <td><%=l nameserver.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_nameserver_path(nameserver), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      nameserver_path(nameserver),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_nameserver_path,
            :class => 'btn btn-primary' %>
