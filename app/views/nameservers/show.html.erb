<%- model_class = Nameserver -%>
<div class="row-fluid">
  <h2><%=t '.title', :default => model_class.model_name.human %></h2>


<dl class="dl-horizontal">
  <dt><strong>Endereço:</strong></dt>
  <dd><%= @nameserver.address %></dd>
  <dt><strong>Nome:</strong></dt>
  <dd><%= @nameserver.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:primary) %>:</strong></dt>
  <dd><%= @nameserver.primary %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vip) %>:</strong></dt>
  <dd><%= @nameserver.vip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:internal) %>:</strong></dt>
  <dd><%= @nameserver.internal %></dd>
</dl>

<div class="control-group" >
  <div class="controls">
  <%= link_to t('.back', :default => "Voltar"),
              nameservers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => "Editar"),
              edit_nameserver_path(@nameserver), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => "Excluir"),
              nameserver_path(@nameserver),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza que deseja excluir este nameserver?')) },
              :class => 'btn btn-danger ' %>
  </div>
