<div class="row-fluid">
  <div class="span12" style="text-align: center;">
    <h1> Cadastro NetMetric MoM</h1>
  </div>

  <%= form_for @user, :url => registration_create_path do |f| %>
      <div class="span4 offset4" style="text-align: center;">
        <% if @user.errors.any? %>
            <div class="alert alert-error">
              <ul>
                <% for message in @user.errors.full_messages %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="field">
          <%= f.email_field :email, :placeholder => "Digite seu E-Mail", :class => 'input-block-level' %>
        </div>

        <div class="field">
          <%= f.password_field :password, :placeholder => "Digite uma Senha", :class => 'input-block-level' %>
        </div>

        <div class="field">
          <%=   f.password_field :password_confirmation, :placeholder => "Repita a sua Senha", :class => 'input-block-level' %>
        </div>

        <div class="field">
          <div class="control-group">
            <label class="control-label">NÃ­vel de Acesso:</label>
              <div class="controls">
                <select name="roles[]" class="span12" multiple="multiple">
                  <option value="1" >Administrador</option>
                  <option value="2" selected="true">Visualizador</option>
                </select>
              </div>
            </div>
        </div>

        <div><%= f.submit "Cadastrar", :class => 'btn btn-primary btn-large btn-block' %></div>
        <br/>

        <div><%= link_to "Voltar", :back , :class => 'btn btn-inverse btn-large btn-block' %></div>
      </div>
  <% end %>
</div>
