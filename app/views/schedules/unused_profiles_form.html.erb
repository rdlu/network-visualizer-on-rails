<div class="control-group">
  <label class="control-label" for="profiles">Perfis de Teste</label>
  <div class="controls" id="profiles">
    <% @unused_profiles.each do |unused_profile| %>
        <div class="span3">
          <label class="checkbox">
            <input type="checkbox" name="profiles[]" id="profile-<%=unused_profile.id%>">
            <%= unused_profile.name.upcase %>
          </label>
          <% unused_profile.metrics.each do |metric| %>
              <span class="label label-info etooltip" data-title="<%= metric.description %>"><%= metric.name %><%= " (Anatel #{metric.thresholds.at(0).name})" if metric.thresholds.at(0) %></span>
          <% end %>
        </div>
    <% end %>
    <% if @profiles.empty? %>
        <div class="alert alert-error alert-block">
          Nenhum perfil de teste foi encontrado para o tipo de conexão <%= @connection_profile.name %>.<br>
          Você deve cadastrar perfis de teste para este tipo de conexão.
        </div>
    <% end %>
  </div>
</div>
<script type="text/javascript">
    $('.etooltip').tooltip();
</script>
