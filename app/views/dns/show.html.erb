<%- model_class = Dns -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @dns.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @dns.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vip) %>:</strong></dt>
  <dd><%= @dns.vip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:primary) %>:</strong></dt>
  <dd><%= @dns.primary %></dd>
  <dt><strong><%= model_class.human_attribute_name(:internal) %>:</strong></dt>
  <dd><%= @dns.internal %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              dnss_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_dns_path(@dns), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              dns_path(@dns),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
