<%- model_class = Dns -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:vip) %></th>
      <th><%= model_class.human_attribute_name(:primary) %></th>
      <th><%= model_class.human_attribute_name(:internal) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @dns_list.each do |dns| %>
      <tr>
        <td><%= link_to dns.id, dns_path(dns) %></td>
        <td><%= dns.address %></td>
        <td><%= dns.name %></td>
        <td><%= dns.vip %></td>
        <td><%= dns.primary %></td>
        <td><%= dns.internal %></td>
        <td><%=l dns.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_dns_path(dns), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      dns_path(dns),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_dns_path,
            :class => 'btn btn-primary' %>
