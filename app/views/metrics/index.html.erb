<h2>Métricas</h2>
<div class="row-fluid">
  <div class="span12">
    <% if can? :create, Metric %>
        <div class="navbar">
          <div class="navbar-inner">
            <div class="span2 offset10">
              <%= link_to "Nova Métrica", new_metric_path, :class => "btn btn-primary btn-block" %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <table class="table table-bordered table-hover">
      <tr>
        <th>Nome</th>
        <th><span class="etooltip" data-title="Valor usado internamente pelo netmetric">Plugin</span></th>
        <th>Descrição</th>
        <th><span class="etooltip" data-title="Unidade preferencial de visualização da medida">Unid. Prefer.</span></th>
        <th>
          <span class="etooltip" data-title="Unidade em que está efetivamente guardada no Banco de Dados">Unid. no BD</span>
        </th>
        <th><span class="etooltip" data-title="Usado pelo NetMetric para tratar os resultados recebidos e guardá-los">Tipo de Métrica</span>
        </th>
        <th><span class="etooltip" data-title="Quanto menor, melhor o resultado">Métrica reversa</span></th>
        <th>
          <span class="etooltip" data-title="Ordem de preferência na apresentação de relatórios">Ordem de apresentação</span>
        </th>
        <th colspan="2"></th>
      </tr>

      <% @metrics.each do |metric| %>
          <tr>
            <td><%= metric.name %></td>
            <td><%= metric.plugin %></td>
            <td><%= metric.description %></td>
            <td><%= metric.view_unit %></td>
            <td><%= metric.db_unit %></td>
            <td><%= metric.pretty_metric_type %></td>
            <td><%= metric.reverse %></td>
            <td><%= metric.order %></td>
            <td><%= link_to 'Visualizar', metric %></td>
            <td>
              <% if can? :create, Metric %><%= link_to 'Editar', edit_metric_path(metric) %>
              <% end %></td>


          </tr>
      <% end %>
    </table>
    <%= will_paginate @metrics, :style => 'color:#2C719B' %>
  </div>
</div>

<script type="text/javascript">
    $('.etooltip').tooltip();
</script>