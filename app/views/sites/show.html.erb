<%- model_class = Site -%>
<div class="row-fluid">
  <h2><%=t '.title', :default => model_class.model_name.human %></h2>


    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
      <dd><%= @site.url %></dd>
      <dt><strong><%= model_class.human_attribute_name(:vip) %>:</strong></dt>
      <dd><%= @site.vip %></dd>
    </dl>

    <div class="control-group">
      <div class="controls" >
      <%= link_to t('.back', :default => "Voltar"),
                  sites_path, :class => 'btn btn-primary btn-large'  %>
      <%= link_to t('.edit', :default => "Editar"),
                  edit_site_path(@site), :class => 'btn' %>
      <%= link_to t('.destroy', :default => "Excluir"),
                  site_path(@site),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem certeza que deseja excluir este Site?')) },
                  :class => 'btn btn-danger' %>
      </div>
    </div>
</div>