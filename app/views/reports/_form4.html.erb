<% end %>


<script>
    $(function () {
      if ($('#idservers').val() == 'internos')
      {
          $('#networktype').show();
      }
      else
      {
          $('#networktype').hide();
      }
    });


    function showNetworkTypes(selected){
        if(selected == "internos")
        {
            $('#networktype').show();
        }
        else
        {
            $('#networktype').hide();
        }
    }

    jQuery('#report-form4').submit(function (event) {
        $("html, body").animate({ scrollTop: 0 }, "slow");
        $("#optbtn").attr('src', '/assets/opt_btn-right.png');
        $("#optbtn").attr('name', 'closed');
    });

    jQuery('#report-form5').submit(function (event) {
        $("html, body").animate({ scrollTop: 0 }, "slow");
        $("#optbtn").attr('src', '/assets/opt_btn-right.png');
        $("#optbtn").attr('name', 'closed');
    });

    jQuery('#report-form6').submit(function (event) {
        $("html, body").animate({ scrollTop: 0 }, "slow");
        $("#optbtn").attr('src', '/assets/opt_btn-right.png');
        $("#optbtn").attr('name', 'closed');
    });
</script>