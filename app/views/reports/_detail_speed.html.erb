<table class="table table-bordered table-hover table-condensed" >
  <thead>
  <tr >
    <th ></th>
    <th ></th>
    <%  Threshold.all.each do |threshold|
      if threshold.id == 1 || threshold.id == 2
    %>
            <th colspan="2" style="text-align: center"><%= threshold.description %></br> Meta: <%= threshold.compliance_level* 100 %>%</th>
        <% else %>
            <th style="text-align: center"><%= threshold.description %></br> Meta: <%= threshold.compliance_level* 100 %>%</th>
        <% end
           end %>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td colspan="2" style="min-width: 175px">Velocidade Contratada</td>
    <%  Threshold.all.each do |threshold|
      if threshold.id == 1 || threshold.id == 2
        name = threshold.name.split('/') %>
            <td style="text-align: center"><%= name[0] %> </td>
            <td style="text-align: center"><%= name[1] %> </td>
        <% else %>
            <td style="text-align: center"><%= threshold.name %> <br/></td>
        <% end %>
    <% end %>
  </tr>
  <!-- DOWNLOAD -->
  <tr>
    <td rowspan="<%= Plan.all.size %>" style="padding-top: 50px; text-align: center"> Download </td>
    <%  Plan.all.each do |plan| %>
        <td style="text-align: center"> <%= plan.throughput_down %></td>
        <% Threshold.all.each do |threshold|
           case threshold.id
            when 1
        %>
            <td style="text-align: center"><%= @report_results[:scm4][:download][plan.throughput_down] %>%</td>
            <td style="text-align: center"><%= @report_results[:smp10][:download][plan.throughput_down] %>%</td>
        <% when 2 %>
            <td style="text-align: center"><%= @report_results[:scm5][:download][plan.throughput_down][:total_down] %>%/<%= @report_results[:scm5][:download][plan.throughput_down][:total_up] %>%</td>
            <td style="text-align: center"><%= @report_results[:smp11][:download][plan.throughput_down][:total_down] %>%/<%= @report_results[:smp11][:download][plan.throughput_down][:total_up] %>%</td>
        <% when 3 %>
                <td  style="text-align: center"><%= @report_results[:scm6][:download][plan.throughput_down] %>%</td>
        <% when 4 %>
                <td  style="text-align: center"><%= @report_results[:scm7][:download][plan.throughput_down] %>%</td>
        <% when 5 %>
                <td  style="text-align: center"><%= @report_results[:scm8][:download][plan.throughput_down] %>%</td>
        <% when 6 %>
                <td  style="text-align: center"><%= @report_results[:scm9][:download][plan.throughput_down] %>%</td>
        <% end
           end %>
      </tr>
    <% end %>

    </tr>
    <!-- UPLOAD -->
    <tr>
      <td rowspan="<%= Plan.all.size %>" style="padding-top: 50px; text-align: center"> Upload </td>
    <%  Plan.all.each do |plan| %>

        <td style="text-align: center"> <%= plan.throughput_up %></td>
        <% Threshold.all.each do |threshold|
          case threshold.id
            when 1
        %>
                  <td style="text-align: center"><%= @report_results[:scm4][:upload][plan.throughput_up] %>%</td>
                  <td style="text-align: center"><%= @report_results[:smp10][:upload][plan.throughput_up] %>%</td>
              <% when 2 %>
                  <td style="text-align: center"><%= @report_results[:scm5][:upload][plan.throughput_up][:total_down] %>%/<%= @report_results[:scm5][:upload][plan.throughput_up][:total_up] %>%</td>
                  <td style="text-align: center"><%= @report_results[:smp11][:upload][plan.throughput_up][:total_down] %>%/<%= @report_results[:smp11][:upload][plan.throughput_up][:total_up] %>%</td>
              <% when 3 %>
                  <td  style="text-align: center"><%= @report_results[:scm6][:download][plan.throughput_down] %>%</td>
              <% when 4 %>
                  <td  style="text-align: center"><%= @report_results[:scm7][:download][plan.throughput_down] %>%</td>
              <% when 5 %>
                  <td  style="text-align: center"><%= @report_results[:scm8][:download][plan.throughput_down] %>%</td>
              <% when 6 %>
                  <td  style="text-align: center"><%= @report_results[:scm9][:download][plan.throughput_down] %>%</td>
            <% end
           end %>
      </tr>
  <% end %>


  </tbody>
</table>
