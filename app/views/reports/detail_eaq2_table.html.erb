<!--Metas-->
<tr>
  <td style="font-weight: bold">Dia</td>
  <% @thresholds.each do |threshold|
    if threshold.id == 1 || threshold.id == 2
  %>
          <td colspan="2"  style="text-align: center; font-weight: bold">
          </td>
          <% else %>
          <td style="text-align: center; font-weight: bold">
          </td>
          <% end %>
  <% end %>
</tr>
