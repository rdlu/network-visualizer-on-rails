        </tr>

    <% end %>
<% else
     (1..Date.current.day).each do |day| %>
        <tr>
          <td style="font-weight: bold"><%= day %></td>
          <% @thresholds.each do |threshold| %>

              <td style="text-align: center"> </td>

          <% end %>
        </tr>
    <% end %>
<% end %>
<tr>
  <td colspan="7" style="font-weight: bold; background-color: #777777;text-align: center"></td>
</tr>

<script>
    function popupTable(id)
    {
        var uid = [];
        uid = id.split('_');

        $.ajax({
            dataType: '',
            type: 'POST',
            url: "<%= detail_speed_type_eaq2_table_reports_url %>",
            data: { date: moment(uid[0]).format('DD/MM/YYYY') , id: uid[1] },
            success: function(data){
                $('#modal-'+id).html(data).modal({show:true});
            }
        });

    }

</script>