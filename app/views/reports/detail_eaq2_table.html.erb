     (1..Time.parse(@month).end_of_month.day).each do |day|
       result = ""
       uid = SecureRandom.uuid
%>

        <tr id="<%= Date.parse(@month).change(:day => day) %>_<%= uid %>">
          <td style="font-weight: bold"><%= day %> &nbsp;&nbsp;<span class="icon-search" title="Detalhar" onclick="popupTable('<%= Date.parse(@month).change(:day => day) %>_<%= uid %>')"></span></td>

